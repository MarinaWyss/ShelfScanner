{
  "version": 2,
  "buildCommand": "npm run build && npm run build:api",
  "outputDirectory": "dist/public",
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/dist/public/$1" }
  ]
} 